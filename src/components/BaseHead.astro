---
import '@/styles/global.css';

interface Props {
    title: string;
}

const {title} = Astro.props;
---

<head>
    <!-- Global Methadata -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">

    <!-- Fonts Preloads -->
    <link rel="preload" href="/fonts/lato-latin-100-normal.woff" as="font" type="font/woff" crossorigin>
    <link rel="preload" href="/fonts/lato-latin-300-normal.woff" as="font" type="font/woff" crossorigin>
    <link rel="preload" href="/fonts/lato-latin-400-normal.woff" as="font" type="font/woff" crossorigin>
    <link rel="preload" href="/fonts/lato-latin-700-normal.woff" as="font" type="font/woff" crossorigin>
    <link rel="preload" href="/fonts/lato-latin-900-normal.woff" as="font" type="font/woff" crossorigin>

    <title>{title}</title>
</head>